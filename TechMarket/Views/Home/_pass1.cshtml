<br />
<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <div class="card">
            <div class="container">
                <center>
                    <h5>Thay đổi mật khẩu</h5>
                </center>
                @using (Html.BeginForm("DoiMatKhau", "Home", FormMethod.Post, new { @id = "frmLogin" }))
                {
                    <label style="color:red">@ViewBag.msg</label>
                    
                    <div class="form-group">
                        <div class="form-outline mb-4 frm-fgh">
                            <input type="password" class="form-control" name="matkhauht" value="" />
                            <label class="form-label" for="matkhauht">Nhập mật khẩu hiện tại</label>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="form-outline mb-4 frm-fgh">
                            <input type="password" class="form-control" name="matkhaum" value="" />
                            <label class="form-label" for="matkhaum">Nhập mật khẩu mới</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-outline mb-4 frm-fgh">
                            <input type="password" class="form-control" name="matkhaunl" value="" />
                            <label class="form-label" for="matkhaunl">Nhập lại mật khẩu</label>
                        </div>
                    </div>
                    <center>
                        <input type="submit" class="btn btn-success" name="submit" value="Đổi mật khẩu" />
                    </center>
                    <br />
                }
            </div>
        </div>
    </div>
    <div class="col-sm-3"></div>
</div>